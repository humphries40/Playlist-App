<div class="login">
  <% if flash[:alert] %>
    <p id="notice"><%= flash[:alert] %></p>
  <% end %>

  <%= form_tag do %>
    <fieldset>
      <h1>Please Login</h1>

      <div class="fields">
        <%= label_tag :name, 'Name:' %>
        <%= text_field_tag :name, params[:name] %>
      </div>

      <div class="fields">
        <%= label_tag :password, 'Password:' %>
        <%= password_field_tag :password, params[:password] %>
      </div>

      <div class="fields">
        <%= submit_tag "Login" %>
      </div>
    </fieldset>
  <% end %>
</div>

